@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<TestOveractive.Entities.Permiso>
@{
    List<TestOveractive.Entities.TipoPermiso> tipoPermisos = ViewBag.tipoPermisos as List<TestOveractive.Entities.TipoPermiso>;
}
<div class="text-center">
    <h1 class="display-4">@Model.Count() Resultado(s)</h1>

</div>

@if (Model.Any())
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre empleado</th>
                <th scope="col">Apellido empleado</th>
                <th scope="col">Fecha</th>
                <th scope="col">Tipo de permiso</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.NombreEmpleado</td>
                    <td>@item.ApellidosEmpleado</td>
                    <td>@item.Fecha</td>
                    <td>@tipoPermisos.FirstOrDefault(x => x.Id == item.TipoPermisoId).Descripcion</td>
                    <td>
                        <form asp-action="Delete" asp-controller="Home" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button class="btn btn-danger" type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
@if (ViewBag.hasError != null && ViewBag.hasError)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.errorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
<div class="text-center">
    <a asp-area="" asp-controller="Home" asp-action="CreatePermiso">Agregar nuevo permiso!</a>
</div>

